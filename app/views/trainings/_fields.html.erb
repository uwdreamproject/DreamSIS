<%= f.inputs do -%>
	<%= f.input :title %>
	<%= f.input :description, :input_html => {:rows => 3} %>
	<%= f.input :video_url, :hint => "This URL should point to an MP4 video file." %>
	<%= f.input :chapters_url, :hint => "This URL should point to an SRT file." %>
<% end -%>

<%= f.inputs "Styling" do %>
	<%= f.input :stylesheet_url, :label => "Stylesheet URL",
	 			:hint => "Provide the URL for a stylesheet that should be applied to this training. HTTPS addresses are recommended." %>
<% end -%>