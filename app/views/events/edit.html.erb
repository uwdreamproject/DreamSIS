<h1>Editing event</h1>

<%= semantic_form_for(@event, :url => event_path(@event)) do |f| %>

	<%= f.semantic_errors %>

	<%= render :partial => "fields", :locals => { :f => f } %>

	<%= f.submit "Update", :disable_with => 'Updating...' %>
	<%= separator %>
	<%= link_to 'Cancel', event_path(@event), :class => '' %>

<% end -%>
