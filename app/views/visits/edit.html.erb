<h3 class="pre-title"><%= @high_school.name %></h3>
<h1>Edit <%= Customer.visit_Label %></h1>

<%= semantic_form_for :visit, @visit, :url => high_school_visit_path(@high_school), :html => { :method => :put } do |f| %>

	<%= f.semantic_errors %>

	<%= render :partial => "events/fields", :locals => { :f => f } %>
	
	<%= f.submit "Update", :disable_with => 'Updating...' %>
	<%= separator %>
	<%= link_to 'Cancel', high_school_visits_path(@high_school) %>

<% end %>
