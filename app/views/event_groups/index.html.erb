<h1>Event Groups</h1>

<%= will_paginate @event_groups %>

<table>
  <tr>
    <th>Name</th>
	<th>Events</th>
	<th colspan=3>Functions</th>

  </tr>

<% for event_group in @event_groups %>
  <tr>
    <td class="name">
		<%= link_to h(event_group.name), event_group %>
		<%= content_tag :span, "shared", class: "shared tag" if event_group.proxies? %>
	</td>
	<td><ul><%= raw event_group.events.collect{|e| content_tag(:li, link_to(h(e.name), event_path(e)))}.join %></ul></td>
    <td class="functions"><%= link_to 'Show', event_group_path(event_group) %></td>
    <td class="functions"><%= link_to 'Edit', edit_event_group_path(event_group) %></td>
    <td class="functions"><%= link_to 'Destroy', event_group_path(event_group), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= content_for(:sidebar) do %>
	<%= link_to 'Create new event group', new_event_group_path, class: 'add button' %>
<%- end -%>
