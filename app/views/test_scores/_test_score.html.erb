<tr id="test_score_<%= test_score.id %>">

	<td class="name"><%= link_to h(test_score.name), [@participant, test_score] %></td>
	<td><%=h test_score.taken_at.try(:to_s, :date_with_day_of_week) %>
		<%= content_tag :small, "(#{time_ago_in_words(test_score.taken_at)} ago)", :class => 'light' unless test_score.taken_at.blank? %>
	</td>
	<td>
        <%=h test_score.total_score_pretty %>
        <%= content_tag :span, "passed", :class => "green tag" if test_score.passed? %>
    </td>
	
	<td class="functions">
		<%= link_to 'Details', [@participant, test_score] %>
		<%= link_to 'Edit', edit_participant_test_score_path(@participant, test_score) %>
		<%= link_to 'Remove', [@participant, test_score], :confirm => 'Are you sure?', :method => :delete %>
	</td>
</tr>
