<h1>Editing shift</h1>
<h2><%= @event.name %></h2>

<% semantic_form_for(@event_shift, :url => event_event_shift_path(@event, @event_shift)) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>

	<%= f.submit "Update", :disable_with => 'Updating...' %>
	<%= separator %>
	<%= link_to 'Cancel', event_path(@event), :class => '' %>

<% end -%>
