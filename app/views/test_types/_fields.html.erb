<%- f.inputs do -%>
	<%= f.input :name %>

	<%= f.input :maximum_total_score, :input_html => { :size => 5 } %>
	
	<%= f.input :score_calculation_method, :as => :select, :collection => %w[sum average rounded-average],
		 		:hint => "'Sum' adds each section score together to get the total score. 
						  'Average' calculates an average of all the section scores instead." %>

	<%= f.input :sections, :input_html => { :rows => 5, :width => 20 }, 
				:hint => "List each section, one per line. If the section tracks a score, 
							show the maximum score after a colon, like this: \"Writing: 800\"" %>

    <%= f.input :passable, :hint => "Does the test have a 'passing' score? If so, a 'passed' checkbox 
                                    will be shown on the screen when adding this test to a student's record." %>

<% end -%>
