<% f.inputs do %>
	<%= f.input :title unless f.object.is_a?(Quarter) %>
	<%= f.input :start_date %>
	<%= f.input :end_date %>
	<%= f.input :course_ids, :as => :text, :label => "Primary Course ID(s)", :input_html => { :rows => 3 }, 
					:hint => "Specify the course ID's for this term in the format: 2011,spring,EDUC,360/A. One per line." if Customer.link_to_uw? %>
        <%= f.input :course_dependencies, :as => :text, :label => "Course Dependencies",:input_html => { :rows => 8 }, 
					:hint => 'Specify dependencies in YAML. <a href="http://depts.washington.edu/uwdrmprj/resources/misc/dependencies_outline.txt">Documentation</a>.' if Customer.link_to_uw? %>
	<%= f.input :signup_description, :as => :text, :label => "Signup Page Description", :input_html => { :rows => 12 }, :hint => 'Text to be displayed on the signup page. Use <a href="http://redcloth.org/">Textile</a> markup for formatting.' if Customer.link_to_uw? %>
	<%= f.input :allow_signups %>
<% end -%>
