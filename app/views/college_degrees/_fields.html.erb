<%= f.inputs(:name => "Institution") do %>
	<%= render :partial => 'college_applications/institution_select', 
				:locals => { 
					:attribute_name => "institution_id", 
					:parent_object => @college_degree, 
					:parent_name => "college_degree",
					:f => f 
				} %>
<% end -%>


<%= f.inputs :name => "Degree Details" do -%>
	<%= f.input :graduated_on, :label => "Graduation Date" %>
	<%= f.input :degree_title %>
	
	<%- for index in %w[1 2 3 4] -%>	
		<%= f.inputs :name => "Major #{index}", :class => "inline" do -%>
			<%= f.input "major_#{index}", :label => "Name" %>
			<%= f.input "major_#{index}_cip", :label => "CIP Code", :input_html => { :size => 6 } %>
		<% end %>
	<% end %>
	
	<%= f.input :source, :as => :select, :collection => %w[manual clearinghouse] %>
	
<% end %>
