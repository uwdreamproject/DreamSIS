<h3 class="pre-title"><%= link_to h(@participant.fullname), @participant %></h3>
<h1>College Degrees</h1>

<table id="college_degrees" class="multirow">
	<thead>
		<tr>
			<th>College</th>
			<th>Date</th>
			<th>Degree</th>
			<th colspan=3>Functions</th>
		</tr>
	</thead>

	<tbody>
	<%- if @college_degrees.empty? -%>
		<tr class="empty">
			<td colspan="10">No college degrees yet.</td>
		</tr>
	<% else %>
		<%= render :partial => "college_degree", :collection => @college_degrees %>
	<% end %>
	</tbody>

</table>


<div id="sidebar">
	<%= link_to 'Add college degree', new_participant_college_degrees_path, :class => 'add button' %>
</div>
