<h1>Editing group</h1>

<% semantic_form_for(@participant_group, :url => participant_group_path(@participant_group)) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>

	<%= f.submit "Update", :disable_with => 'Updating...' %>
	<%= separator %>
	<%= link_to 'Cancel', participant_groups_path, :class => '' %>

<% end -%>
