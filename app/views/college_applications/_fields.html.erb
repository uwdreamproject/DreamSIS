<%= f.inputs(name: "Institution") do %>
	<p>Choose the college or university by searching by name below.</p>
	<%= render partial: 'institution_select', 
				locals: { 
					attribute_name: "institution_id", 
					parent_object: @college_application, 
					parent_name: "college_application",
					f: f
				} %>
<% end -%>

<%= f.inputs(name: "Application Process") do %>
	<p>Track the process of the application to this institution.</p>
	<%= f.input :choice, as: :select, collection: (@college_application_choice_options || %w[Interested Reach Solid Safety]) %>
	<%= f.inputs name: "Personal Statement", class: "inline" do -%>
		<%= f.input :personal_statement_started, label: "Started" %>
		<%= f.input :personal_statement_completed, label: "Completed" %>
	<% end %>
	<%= f.input :date_applied, as: :date_select, include_blank: true, hint: link_to_now('college_application_date_applied') %>
<% end -%>

<%= f.inputs(name: "Decision") do %>
	<p>Track the decision sent back from the institution to the student.</p>
	<%= f.input :decision, as: :select, collection: ["Accepted", "Denied", "Waitlisted", "Deferred", "No Longer Applying"], include_blank: true %>
	<%= f.input :date_notified, as: :date_select, include_blank: true, hint: link_to_now('college_application_date_notified') %>
	<%= f.input :date_deposit_sent, as: :date_select, include_blank: true, hint: link_to_now('college_application_date_deposit_sent') %>
<% end -%>
