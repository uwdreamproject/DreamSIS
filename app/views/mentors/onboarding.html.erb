
<h3 class="pre-title"><%= @term.title %></h3>
<h1><%= Customer.mentor_Label %> On-boarding</h1>

<table id="current_mentors" class="loading">
</table>

<div>
	<p><%= link_to "Refresh Textblocks", onboarding_textblocks_mentors_path(:format => :json, :term_id => @term.id), :class => "sync button", :id => "refresh-button" %></p>

	<h3>First 10 students for background checks (in WATCH auto-fill format):</h3>
	<textarea id="background-check-block" rows=11 cols=60 style="font-family:monospace" onClick="this.select()"><%= background_check_textblock(@mentors) %></textarea><br>
	<a href="<%= URI.encode("javascript:" + render('watch_bookmarklet.js')) %>" class="up button">WATCH Auto-fill Bookmarklet</a>
	<br>

	<h3>First 10 students for sex offender checks (in NSOPW auto-fill format):</h3>
	<textarea id="sex-offender-check-block" rows=11 cols=60 style="font-family:monospace" onClick="this.select()"><%= sex_offender_check_textblock(@mentors) %></textarea><br>
	<a href="javascript:lines%20=%20prompt('Enter%20names%20block%20in%20proper%20format:').split(/'%20'|\r\n|\n/);f%20=%20document.forms[0];for(i=0;i<lines.length;i++){names=lines[i].split('|');document.forms[0].target='window'+i;document.getElementById('firstName').value=names[0];document.getElementById('lastName').value=names[1];window.open(f.action,f.target);f.submit();}" class="up button">NSOPW Auto-search Bookmarklet</a>
</div>

<%= content_for(:sidebar) do %>
	<h3>Update Mentor Information</h3>
	<div id="form-container">Click a row to begin editing</div>
<% end %>

<%= render :partial => "table_ajax", :locals => {:table_partial => "onboarding_table"} %>
