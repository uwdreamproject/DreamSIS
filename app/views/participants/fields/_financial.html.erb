<%- f.inputs :name => "Family Financial Information" do -%>

	<%- f.inputs :name => "Free- or reduced-price lunch", :class => "inline" do -%>
		<%= f.input :free_reduced_lunch, :label => "Qualifies" %>
		<%= f.input :free_reduced_lunch_signed_up, :label => "Signed up" %>
	<% end %>

	<%= f.input :household_size, :collection => 1..20, :as => :select, :label => "Number of persons in household", :hint => "Include the student in this count." %>


	<%= f.input :fafsa_submitted_date, :label => "FAFSA submission date", :hint => link_to_now(:participant_fafsa_submitted_date) %>
	<%= f.input :fafsa_not_applicable, :label => "FAFSA not applicable for this student" %>

<% end %>