<%= f.inputs name: "Parent/Guardian Information" do -%>
	<%= f.inputs name: "Language", class: "inline" do -%>
		<%= f.input :english_not_primary_at_home, label: "English is not the primary language spoken in the home" %>
	<% end %>
	
	<%= f.input :parent_only_speaks_language, label: "One parent/guardian only speaks this language" %>
	<%= f.input :other_languages, label: "Other languages spoken in home" %>
	
	<%= f.inputs name: "Home Situation", class: "inline" do -%>
		<%= f.input :single_parent_household %>
		<%= f.input :foster_youth, label: "Foster Care Youth" %>
	<% end %>

    <%- if false -%>
	<%- for count, parent in {1 => "mother", 2 => "father"} -%>
		<%= f.inputs name: "#{parent.titleize}/Guardian #{count}", class: "inline" do -%>
			<%= f.input "#{parent}_education_level_id", label: "Education Level", collection: EducationLevel.all %>
			<%= f.input "#{parent}_education_country", label: "Education Country", include_blank: true %>
			<%= f.input "live_with_#{parent}", label: "Lives with this person" %>
		<% end %>
	<% end %>
    <% end %>

<% end %>
