<%= f.inputs :name => "Contact Information" do -%>
	<%= f.inputs :name => "Mailing Address", :class => "inline compress-bottom" do %>
		<%= f.inputs :street, :city, :state, :zip %>
	<% end %>
	<% if !(current_user.type = 'Participant') %>
	  <%= f.input :bad_address, :label => "Bad address information (needs correcting)" %>
	<% end %>
	
	<%= f.inputs :name => "Phone Numbers", :class => "inline compress-bottom" do %>
		<%= f.input :phone_home, :label => "Home" %>
		<%= f.input :phone_mobile, :label => "Mobile" %>
		<%= f.input :preferred_phone, :as => :select, :collection => %w[Home Mobile] %>
	<% end %>
	<%= f.inputs :name => "", :class => "inline" do -%>
		<%= f.inputs :can_send_texts, :can_receive_texts, :unlimited_texting %>
	<% end %>
	
	<% if !(current_user.type = 'Participant') %>
	  <%= f.input :bad_phone, :label => "Bad phone information (needs correcting)" %>
	<% end %>
	
	<%= f.inputs :name => "Email", :class => "inline compress-bottom" do -%>
		<%= f.input :email, :label => "Primary" %>
		<%= f.input :email2, :label => "Backup" %>
		<%= f.input :check_email_regularly, :label => "Checks email regularly" %>
	<% end %>

	<% if !(current_user.type = 'Participant') %>
	  <%= f.input :bad_email, :label => "Bad email information (needs correcting)" %>
	<% end %>
	
	<%= f.input :facebook_id, :label => "Facebook ID", :input_html => { :size => 15 } %>
	
    <%= f.inputs :name => "Internet at Home", :class => "inline" do -%>
    	<%= f.input :computer_at_home, :label => "Reliable access to a computer and email at home" %>
    <% end %>

	<%= f.input :preferred_contact_method, :collection => %w[Phone Text Email Facebook] %>
    
<% end %>
