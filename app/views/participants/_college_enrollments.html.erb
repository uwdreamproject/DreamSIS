<table id="college_enrollments">
	<thead>
		<tr>
			<th></th>
			<th>Institution</th>
			<th>Start</th>
			<th>End</th>
			<th>Status</th>
			<th>Class</th>
			<th>Major(s)</th>
			<th colspan=3>Functions</th>
		</tr>
	</thead>

	<tbody>
		<%- if @participant.college_enrollments.empty? -%>	
			<tr class="empty">
				<td colspan="10">No college enrollments yet.</td>
			</tr>
		<% end %>

		<%= render partial: "college_enrollments/college_enrollment", collection: @participant.college_enrollments %>
	</tbody>

</table>	

<br />
<%= link_to 'Add college enrollment', new_participant_college_enrollment_path(@participant), class: 'add button' %>