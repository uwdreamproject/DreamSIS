<tr class="<%= "deselected" if participant.inactive? %> <%= "not-target" if participant.not_target_participant? %> <%= "needs-followup" if participant.needs_followup? %> <%= "not-first-child" unless row_index == 1 %> participant">

	<%- if row_index == 1 -%>
		<td class="check_box_td multirow-highlight" rowspan="<%= row_count %>">
			<input type="checkbox" name="selected[Participant][<%= participant.id %>]" class="index_check_box" value="1" />
		</td>
		<!-- <td class="avatar">
			<%#= image_tag participant.avatar.thumb.url, class: "avatar" %>
		</td> -->
		<td rowspan="<%= row_count %>" class="name multirow-highlight">
			<%= link_to participant.lastname_first, participant %>
			<div class="pull-right">
				<%= content_tag :small, Customer.not_target_label.titleize, class: "label label-outline" if participant.not_target_participant? %>
				<%= content_tag :small, "Inactive", class: "label label-danger" if participant.inactive? %>
			</div>
		</td>
		<%= render partial: "participants/reports/#{report.pluralize}",
					locals: { participant: participant, collection: collection, row_count: collection.size, row_index: row_index } %>
	<% end %>

	<%- unless collection.empty? -%>
		<%= render partial: "participants/reports/#{report.singularize}",
					object: collection[row_index-1],
					locals: { participant: participant, row_index: row_index } %>
	<% end %>

	<%- if row_index == 1 -%>
		<td rowspan="<%= row_count %>" class="functions multirow-highlight">
			<%= link_to 'Show', participant_path(participant, anchor: "!/section/#{report}") %>
			<%= link_to 'Edit', edit_participant_path(participant) %>
		</td>
	<% end %>
	
</tr>
