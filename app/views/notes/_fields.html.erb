<%= f.inputs "Note Content" do %>
	<%= f.input :title, :hint => "Titles are only required when you're attaching a document to this note." %>
	<%= f.input :note, :input_html => { :rows => 5 } %>
	<%= f.input :needs_followup %>
<% end %>

<%= f.inputs "Metadata" do %>
	<%= f.input :contact_type, :as => :select, :collection => ["", "Phone", "E-mail", "Text", "Facebook", "In-person"] %>
	<%= f.inputs :created_at, :document %>
<% end %>
