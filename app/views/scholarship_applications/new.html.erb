<h3 class="pre-title"><%=h @participant.fullname %></h3>
<h1>Add scholarship</h1>

<% semantic_form_for([@participant, @scholarship_application]) do |f| %>
  	<%= f.error_messages %>

	<%- f.inputs do -%>
		<%= render :partial => "fields", :locals => { :f => f } %>
	<% end -%>

	<%- f.buttons do -%>
	 	<%= f.submit "Create" %>
		<%= link_to 'Back', @participant, :class => 'cancel button' %>
	<% end -%>

<% end %>