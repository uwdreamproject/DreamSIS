<h3 class="pre-title"><%=h @participant.fullname %></h3>
<h1>Add scholarship</h1>

<% semantic_form_for([@participant, @scholarship_application]) do |f| %>
  	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<span class="separator">&mdash; or &mdash;</span>
	<%= link_to 'Cancel', @participant %>

<% end %>